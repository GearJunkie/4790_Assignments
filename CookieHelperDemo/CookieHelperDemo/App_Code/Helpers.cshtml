@*Any helper code must go in App_Code folder*@


@helper myDiv() {
        <div style="width: 250px; height: 500px; background-color: #ff6a00;
                padding: 20px; color: #fff;">
            @DateTime.Now
        </div>
    }

@helper myGames(string[] games) { 
    <ul>
        @foreach (var g in games)
        {
            <li>@g</li>
        }
    </ul>
    }
@*if second int is not supplied by user, default = 50*@
@helper myNumbers(int startpoint, int endpoint = 50)
    {
        <ul>
            @for (int i = startpoint; i < endpoint; i++)
            {
                <li>@i</li>
            }
        </ul>
    }
@helper methodOverloading(string name) {
    @name
     }

@helper methodOverloading(int num) { 
    @num
    }